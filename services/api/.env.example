# ===========================================
# KPATA AI - API Service Environment Variables
# ===========================================

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Supabase (required)
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Redis
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# OpenRouter AI API
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_PUBLIC_URL=https://media.kpata.ai

# Media Worker
MEDIA_WORKER_URL=https://media.kpata.ai
MEDIA_TOKEN_SECRET=your-hmac-secret-key-minimum-32-characters-long

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id

# Payment Providers
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx

# Web App URL (for payment callbacks)
WEB_APP_URL=http://localhost:3001

# Mobile Money Providers
ORANGE_MONEY_API_KEY=your-orange-money-api-key
ORANGE_MONEY_API_SECRET=your-orange-money-api-secret
MTN_MONEY_API_KEY=your-mtn-money-api-key
MTN_MONEY_API_SECRET=your-mtn-money-api-secret
WAVE_API_KEY=your-wave-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Dev Auth (only works when NODE_ENV !== 'production')
ENABLE_DEV_AUTH=false
